{
  "$schema": "https://raw.githubusercontent.com/sumneko/vscode-lua/master/setting/schema.json",

  "addonManager": {
    "enable": false
  },

  "completion": {
    "displayContext": 0,
    "keywordSnippet": "Both",
    "callSnippet": "Both",
    "showWord": "Fallback",
    "workspaceWord": true
  },

  "format": {
    "enable": false
  },

  "hint": {
    "enable": false
  },

  "hover": {
    "enable": true
  },

  "window": {
    "progressBar": true,
    "statusBar": false
  },

  "diagnostics": {
    "enable": true,
    "globals": [ "vim",
            "MiniSnippets",
            "m_cache_subwidth" ],
    "ignoredFiles": "Opened",
    "libraryFiles": "Opened",
    "workspaceDelay": 3000,
    "workspaceEvent": "OnSave"
  },

  "runtime": {
    "version": "LuaJIT"
  },

  "workspace": {
    "checkThirdParty":false,
    "library": [
      "/usr/local/share/lua/5.1",
      "/usr/share/lua/5.1",

      "$VIMRUNTIME"
    ]
  },

  "misc": {
    "parameters": [ "--loglevel=error" ]
  },
    "diagnostics.disable": [
        "missing-parameter",
        "redundant-value",
        "duplicate-set-field",
        "unused-function",
        "empty-block"
    ]
}
